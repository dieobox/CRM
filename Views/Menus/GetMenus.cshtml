@model IEnumerable<CRM.Models.Menus>


@* Table *@
<div id="ShowMenus">
    <table id="td_menus" class="table table-striped table-bordered table-hover" width="100%">
        <thead>
            <tr>
                <th class="text-align-center">ลำดับ</th>
                <th >ชื่อเมนูหลัก</th>
                <th class="text-align-center">สถานะ</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                int Rows = 1;
                foreach (var list in Model)
                {
                    <tr>
                        <td class="text-align-center">@Rows.</td>
                        <td>@list.MenuName</td>
                        <td class="text-center">
                            @if (list.Enable == true)
                            {
                                <i class="fa txt-color-green fa-check-circle"></i>
                            }
                            else
                            {
                                <i class="fa txt-color-red fa-times-circle"></i>
                            }
                        </td>
                        <td class="text-align-center">
                            <button class="btn btn-info btn-xs manage" value="@list.MenuId" style="font-size:10px;"><i class="fa fa-gear"></i> จัดการเมนูย่อย</button>
                            <button class="btn btn-warning btn-xs edit"   value="@list.MenuId" style="font-size:10px;"><i class="fa fa-pencil"></i> แก้ไข</button>
                            <button class="btn btn-danger btn-xs  delete" value="@list.MenuId"  style="font-size:10px;"><i class="fa fa-eraser"></i> ลบ</button>
                        </td>
                    </tr>
                    Rows++;
                }
            }
            
        </tbody>
    </table>
</div>


@* End Table *@

