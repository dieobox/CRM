﻿@using DEPIntranet.Helpers
@{
    ViewBag.PageId = "extr-page";
}
@section topright{
    <span id="extr-page-header-space"> </span>
}
<div id="content" class="container">
    <div class="row">
        @{ await Html.RenderPartialAsync("_LoginText"); }
        <div class="col-xs-12 col-sm-12 col-md-5 col-lg-4">
            <div class="well no-padding">
                <form action="@Url.Action("ForgotPasswordConfirmation", "account")" method="POST" id="login-form" class="smart-form client-form">
                    <header>
                        Reset password
                    </header>
                    @Html.AntiForgeryToken()
                    @Html.ValidationBootstrap()
                    <fieldset>
                        <section>
                            <label class="label">Password</label>
                            <label class="input">
                                <i class="icon-append fa fa-envelope"></i>
                                <input type="password" name="Password" id="Password">
                                <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Please enter the Password</b>
                            </label>
                        </section>
                        <section>
                            <label class="label">Confirm Password</label>
                            <label class="input">
                                <i class="icon-append fa fa-envelope"></i>
                                <input type="password" name="ConfirmPassword" id="ConfirmPassword">
                                <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Please enter the Confirm Password</b>
                            </label>
                        </section>
                    </fieldset>
                    <input type="hidden" value="@ViewBag.token" name="key">
                    <footer>
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-envelope"></i> ตำเนินการ
                        </button>
                    </footer>
                </form>
            </div>
            @{ await Html.RenderPartialAsync("_SocialMedia"); }
        </div>
    </div>
</div>
@section Scripts {
    <!-- JQUERY VALIDATE -->
    <script type="text/javascript">
        $(function () {
            // Validation
            $("#login-form").validate({
                // Rules for form validation
                rules: {
                    Password: "required",
                    ConfirmPassword: {
                        equalTo: "#Password"
                    }
                },
                // Do not change code below
                errorPlacement: function (error, element) {
                    error.insertAfter(element.parent());
                }
            });
        });
    </script>
}