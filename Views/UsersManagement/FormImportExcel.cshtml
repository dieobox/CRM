<div id="content">
    <section id="widget-grid" class="">
        <div class="jarviswidget" id="wid-id-4" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-deletebutton="false" data-widget-sortable="false">
            <header>
                <h2><i class="fa fa-plus"></i> นำเข้าผู้ใช้งาน</h2>
            </header>
            <div>
                <!-- widget edit box -->
                <div class="jarviswidget-editbox">
                    <input class="form-control" type="text">
                </div>
                <div class="widget-body">

                    @* Form *@
                    <form id="FormImportExcel" class="form-horizontal"
                          enctype="multipart/form-data"
                          asp-antiforgery="true"
                          data-bv-message="This value is not valid"
                          data-bv-feedbackicons-valid="glyphicon glyphicon-ok"
                          data-bv-feedbackicons-invalid="glyphicon glyphicon-remove"
                          data-bv-feedbackicons-validating="glyphicon glyphicon-refresh">
                        <fieldset>
                            <legend style="color:red;">กรุณาเลือกไฟล์ที่จะนำเข้าผู้ใช้งาน</legend>
                            <div class="form-group">
                                <label class="col-lg-3 control-label">Excel File : </label>
                                <div class="col-lg-8">
                                    <input type="file" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" name="ExcelFile" 
                                           data-bv-notempty="true"
                                           data-bv-notempty-message="กรุณาเลือก Excel File"
                                           data-fv-file="true"
                                           data-fv-file-extension=".xlsx"
                                           data-fv-file-type="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet"
                                           data-fv-file-message="The selected file is not valid">
                                </div>
                            </div>
                        </fieldset>
                        <fieldset>
                            <div class="form-group">
                                <label class="col-lg-3 control-label"></label>
                                <div class="col-lg-8">
                                    <div id="loading"></div>
                                </div>
                            </div>
                        </fieldset>
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-12">
                                    <button class="btn btn-success" type="submit" id="submit">บันทึก</button>
                                </div>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </section>
</div>