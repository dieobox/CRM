@using Microsoft.AspNetCore.Identity
@using CRM.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{var currentUser = await UserManager.FindByIdAsync(UserManager.GetUserId(User)); }
<!DOCTYPE html>
<html lang="en-us" id="@ViewBag.PageId" class="">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title> @ViewData["Title"]  </title>
    <meta name="description" content="">
    <meta name="author" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <!-- Basic Styles -->
    <link rel="stylesheet" type="text/css" media="screen" href="~/css/setFontTH.css">
    <link rel="stylesheet" type="text/css" media="screen" href="~/css/TSApp.min.css">
    <link rel="stylesheet" type="text/css" media="screen" href="~/css/datepicker.css">


    <!-- SmartAdmin Styles : Caution! DO NOT change the order -->
    <link rel="stylesheet" type="text/css" media="screen" href="~/css/TSApp-production-plugins.min.css">
    <link rel="stylesheet" type="text/css" media="screen" href="~/css/TSApp-production.min.css">
    <link rel="stylesheet" type="text/css" media="screen" href="~/css/TSApp-skins.min.css">

    <!-- SmartAdmin RTL Support -->
    <link rel="stylesheet" type="text/css" media="screen" href="/css/TSApp-rtl.min.css">


    <!-- FAVICONS -->
    <link rel="shortcut icon" href="~/img/favicon/favicon.ico" type="image/x-icon">
    <link rel="icon" href="~/img/favicon/favicon.ico" type="image/x-icon">
    <!-- GOOGLE FONT -->
    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Open+Sans:400italic,700italic,300,400,700">
    <link rel="apple-touch-icon" href="~/img/splash/sptouch-icon-iphone.png">
    <link rel="apple-touch-icon" sizes="76x76" href="~/img/splash/touch-icon-ipad.png">
    <link rel="apple-touch-icon" sizes="120x120" href="~/img/splash/touch-icon-iphone-retina.png">
    <link rel="apple-touch-icon" sizes="152x152" href="~/img/splash/touch-icon-ipad-retina.png">
    <!-- iOS web-app metas : hides Safari UI Components and Changes Status Bar Appearance -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <!-- Startup image for web apps -->
    <link rel="apple-touch-startup-image" href="~/img/Logo-Organozation/Logo.png" media="screen and (min-device-width: 481px) and (max-device-width: 1024px) and (orientation:landscape)">
    <link rel="apple-touch-startup-image" href="~/img/Logo-Organozation/Logo.png" media="screen and (min-device-width: 481px) and (max-device-width: 1024px) and (orientation:portrait)">
    <link rel="apple-touch-startup-image" href="~/img/Logo-Organozation/Logo.png" media="screen and (max-device-width: 320px)">
</head>
<body class="@ViewBag.PageClass">
    <header id="header">
        @{ await Html.RenderPartialAsync("_Header"); }
        <section id="top-right">
            @(IsSectionDefined("topright") ? RenderSection("topright", false) : Html.Partial("_TopRight"))
        </section>
    </header>
    @if (User.Identity.IsAuthenticated)
    {
        Html.RenderPartial("_Aside", User.Identity.IsAuthenticated);
    }
    <div id="main" role="main">
        @if (User.Identity.IsAuthenticated)
        {
            Html.RenderPartial("_Ribbon", User.Identity.IsAuthenticated);
        }

        @RenderBody()

    </div>
    @if (User.Identity.IsAuthenticated)
    {
        await Html.RenderPartialAsync("_Footer");
    }
    @{ await Html.RenderPartialAsync("_Scripts"); }

    @RenderSection("scripts", false)
</body>
</html>
<script type="text/javascript">
    $(document).ready(function () {
            $.ajax(
               {
                   type: "GET",
                   url: "/Menus/GetSystemMenus",
                   cache: false,
                   success: function (results) {
                       $("#menu").replaceWith(results);
                       initApp.leftNav();
                       //ActiveMenu();
                   }
               });
        });
</script>