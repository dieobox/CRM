@model CRM.Models.Licenses

<div id="content">
    <section id="widget-grid" class="">
        <div class="jarviswidget" id="wid-id-4" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-deletebutton="false" data-widget-sortable="false">
            <header>
                <h2><i class="fa fa-plus"></i> เพิ่มข้อมูล</h2>
            </header>
            <div>
                <!-- widget edit box -->
                <div class="jarviswidget-editbox">
                    <input class="form-control" type="text">
                </div>
                <div class="widget-body">

                    @* Form *@
                    <form id="FormEdit" class="form-horizontal"
                          enctype="multipart/form-data"
                          asp-antiforgery="true"
                          data-bv-message="This value is not valid"
                          data-bv-feedbackicons-valid="glyphicon glyphicon-ok"
                          data-bv-feedbackicons-invalid="glyphicon glyphicon-remove"
                          data-bv-feedbackicons-validating="glyphicon glyphicon-refresh">
                        <fieldset>
                            <legend style="color:red;">กรุณากรอกข้อมูลให้ครบถ้วน</legend>
                            <div class="form-group">
                                <label class="col-lg-3 control-label">Product ID</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" asp-for="ProductId"  readonly />
                                </div>
                            </div>
                        </fieldset>
                        <fieldset>
                            <div class="form-group">
                                <label class="col-lg-3 control-label">Client Limit</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" asp-for="ClientsLimit"
                                           data-bv-notempty="true"
                                           data-bv-notempty-message="กรุณากรอก Client Limit"
                                           data-bv-integer="true"
                                           data-bv-integer-message="กรุณากรอกรหัสสถานะตัวเลข" />
                                </div>
                            </div>
                        </fieldset>
                        <fieldset>
                            <div class="form-group">
                                <label class="col-lg-3 control-label">Console Limit</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" asp-for="ConsoleLimit"
                                           data-bv-notempty="true"
                                           data-bv-notempty-message="กรุณากรอก Console Limit"
                                           data-bv-integer="true"
                                           data-bv-integer-message="กรุณากรอกรหัสสถานะตัวเลข" />
                                </div>
                            </div>
                        </fieldset>
                        <fieldset>
                            <div class="form-group">
                                <label class="col-lg-3 control-label">License Plan</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" asp-for="LicensePlan"
                                           data-bv-notempty="true"
                                           data-bv-notempty-message="กรุณากรอก LicensePlan" />
                                </div>
                            </div>
                        </fieldset>
                        <fieldset>
                            <div class="form-group">
                                <label class="col-lg-3 control-label">Dealer Name</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" asp-for="DealerName"
                                           data-bv-notempty="true"
                                           data-bv-notempty-message="กรุณากรอก DealerName" />
                                </div>
                            </div>
                        </fieldset>
                        <fieldset>
                            <div class="form-group">
                                <label class="col-lg-3 control-label">Sale Name</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" asp-for="SaleName"
                                           data-bv-notempty="true"
                                           data-bv-notempty-message="กรุณากรอก Sale Name" />
                                </div>
                            </div>
                        </fieldset>
                        <fieldset>
                            <div class="form-group">
                                <label class="col-xs-3 col-md-3 col-lg-3 control-label">Start Date</label>
                                <div class="col-xs-2 col-md-2 col-lg-2">
                                    <input type="hidden" class="StartMonth" value="@Model.StartDate.Day">
                                    <select id="StartDay" name="StartDay" style="width:100%"></select>
                                </div>
                                <div class="col-xs-2 col-md-2 col-lg-2">
                                    <select id="StartMonth" name="StartMonth" style="width:100%">
                                        @{
                                            string[] MonthName = { "", "มกราคม", "กุมภาพันธ์", "มีนาคม", "เมษายน", "พฤษภาคม", "มิถุนายน", "กรกฎาคม", "สิงหาคม", "กันยายน", "ตุลาคม", "พฤศจิกายน", "ธันวาคม" };
                                            for (int m = 1; m < MonthName.Count();)
                                            {
                                                if (Model.StartDate.Month == m)
                                                {
                                                    <option value="@m" selected>@MonthName[m]</option>
                                                }
                                                else
                                                {
                                                    <option value="@m">@MonthName[m]</option>
                                                }
                                                m++;
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="col-xs-2 col-md-2 col-lg-2">
                                    <select id="StartYear" name="StartYear" style="width:100%">
                                        @{
                                            int Year = Model.StartDate.Year;
                                            for (int y = (Year + 5); y >= Year; y--)
                                            {
                                                if (y == DateTime.Now.Year)
                                                {
                                                    <option value="@y" selected>@(y + 543)</option>
                                                }
                                                else
                                                {
                                                    <option value="@y">@(y + 543)</option>
                                                }
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                        </fieldset>
                        <fieldset>
                            <div class="form-group">
                                <label class="col-xs-3 col-md-3 col-lg-3 control-label">Expire Date</label>
                                <div class="col-xs-2 col-md-2 col-lg-2">
                                    <input type="hidden" class="ExDay" value="@Model.ExpireDate.Day">
                                    <select id="ExDay" name="ExDay" style="width:100%"></select>
                                </div>
                                <div class="col-xs-2 col-md-2 col-lg-2">
                                    <select id="ExMonth" name="ExMonth" style="width:100%">
                                        @{
                                            string[] ExMonthName = { "", "มกราคม", "กุมภาพันธ์", "มีนาคม", "เมษายน", "พฤษภาคม", "มิถุนายน", "กรกฎาคม", "สิงหาคม", "กันยายน", "ตุลาคม", "พฤศจิกายน", "ธันวาคม" };
                                            for (int m = 1; m < ExMonthName.Count();)
                                            {
                                                if (Model.ExpireDate.Month == m)
                                                {
                                                    <option value="@m" selected>@MonthName[m]</option>
                                                }
                                                else
                                                {
                                                    <option value="@m">@MonthName[m]</option>
                                                }
                                                m++;
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="col-xs-2 col-md-2 col-lg-2">
                                    <select id="ExYear" name="ExYear" style="width:100%">
                                        @{
                                            int ExYear = DateTime.Now.Year;
                                            for (int y = (ExYear + 5); y >= ExYear; y--)
                                            {
                                                if (y == Model.ExpireDate.Year)
                                                {
                                                    <option value="@y" selected>@(y + 543)</option>
                                                }
                                                else
                                                {
                                                    <option value="@y">@(y + 543)</option>
                                                }
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                        </fieldset>

                        <input type="hidden" asp-for="CustomerId">
                        <input type="hidden" asp-for="LicenseId">
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-12">
                                    <button class="btn btn-success" type="submit" id="submit">บันทึก</button>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </section>
</div>