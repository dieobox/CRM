@{
    Layout = "_Layout";
    ViewData["Title"] = "ระบบจัดการผู้ใชังาน";
    
}
<div id="content">
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12 margin-bottom-5">
                <label> ประเภทผู้ใช้งาน </label>
                <select id="type" style="width:50%">
                    <option value="">-----กรุณาเลือกประเภทผู้ใช้งาน------</option>
                    <option value="1">ข้าราชการ</option>
                    <option value="2">ลูกจ้างประจำ</option>
                    <option value="3">พนักงานราชการ</option>
                    <option value="4">จ้างเหมาโครงการ</option>
                    <option value="5">พนักกองทุนฯ</option>
                </select>
                <button class="btn btn-success" data-toggle="modal" id="add" data-target="#ButtonAdd"><i class="fa fa-plus"></i> เพิ่มผู้ใช้งาน</button>
                <button class="btn btn-danger" data-toggle="modal" id="Import" data-target="#ButtonImport"> <i class="fa fa-file-excel-o"></i> นำเข้าผู้ใช้งาน</button>
            </article>
        </div>
    </section>
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>@ViewData["Title"]</h2>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox"></div>
                        <div class="widget-body no-padding">
                            <!--- All Users -->
                            <div id="ShowUsers"></div>
                            <!--------->
                        </div>
                    </div>
                </div>
            </article>
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="alert alert-info fade in" style="font-weight:bold;">
                    <a href="~/uploads/formupdate/FileImportExcel.xlsx" download=""><i class="fa fa-download"></i> Download file Template สำหรับนำเข้าผู้ใช้</a>
                </div>
            </article>
        </div>
    </section>
</div>


@* lightbox *@
@* Create *@
<div class="modal fade" id="ButtonAdd" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" id="MomdalFormAdd"></div>
    </div>
</div>
@* end Create *@

@* Update *@
<div class="modal fade" id="ButtonEdit" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" id="MomdalFormEdit"></div>
    </div>
</div>

@* import *@
<div class="modal fade" id="ButtonImport" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" id="MomdalFormImport"></div>
    </div>
</div>

