@model IEnumerable<CRM.ViewModels.UsersManagement.RoleViewModel>


@* Table *@
<div id="ShowUsers">
    <table id="tb_role" class="table table-striped table-bordered table-hover" style="width:100%">
        <thead>
            <tr>
                <th class="text-align-center">ลำดับ</th>
                <th>ชื่อประเภทสิทธิ์การเข้าถึง</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @{
                    int Rows = 1;
                    foreach (var Role in Model)
                    {
                    <tr>
                        <td class="text-align-center">@Rows.</td>
                        <td>@Role.RoleName</td>
                        <td class="text-align-center">
                            <button class="btn btn-warning btn-xs edit" value="@Role.RoleId" style="font-size:10px;" data-toggle="modal" id="edit" data-target="#ButtonEdit"><i class="fa fa-pencil"></i> แก้ไข</button>
                            <button class="btn btn-danger btn-xs  delete" value="@Role.RoleId" style="font-size:10px;"><i class="fa fa-eraser"></i> ลบ</button>
                        </td>
                    </tr>
                    Rows++;
                }
            }

        </tbody>
    </table>
</div>


@* End Table *@

