@model IEnumerable<CRM.ViewModels.UsersManagement.ListsUserViewModel>

<div id="ShowUsers">
    <table id="td_users" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th class="text-align-center">ลำดับ</th>
                <th>ชื่อเข้าใช้งาน</th>
                <th>ชื่อ-นามสกุล</th>
                <th>เมล</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                int Rows = 1;
                foreach (var list in Model)
                {
                    <tr>
                        <td class="text-align-center">@Rows.</td>
                        <td>@list.Username </td>
                        <td>@list.Fullname</td>
                        <td>@list.mail</td>
                        <td class="text-align-center">
                            <button class="btn btn-warning btn-xs edit"   value="@list.UserId" style="font-size:10px;" data-toggle="modal" id="edit" data-target="#ButtonEdit"><i class="fa fa-pencil"></i> แก้ไข</button>
                            <button class="btn btn-danger btn-xs  delete" value="@list.UserId"  style="font-size:10px;"><i class="fa fa-eraser"></i> ลบ</button>
                        </td>
                    </tr>
                    Rows++;
                }
            }
        </tbody>
    </table>
</div>

