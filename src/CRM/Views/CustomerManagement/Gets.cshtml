@model IEnumerable<CRM.Models.Customers>

<div id="ShowUsers">
    <table id="Jsontable" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th class="text-align-center">ลำดับ</th>
                <th class="text-center">เลือก</th>
                <th>ชื่อบริษัท</th>
                <th>หมายเลขโทรศัพท์</th>
                <th>มือถือ</th>
                <th>อีเมล</th>
                <th>ผู้ติดต่อ</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                int Rows = 1;
                foreach (var list in Model)
                {
                    <tr>
                        <td class="text-align-center">@Rows.</td>
                        <td class="text-center"><input type="radio" class="Choose" name="Choose" value="@list.CustomerId"></td>
                        <td>@list.CompanyName </td>
                        <td>@list.Tel</td>
                        <td>@list.Mobile</td>
                        <td>@list.Email</td>
                        <td>@list.ContactPerson</td>
                        <td class="text-align-center">
                            <button class="btn btn-warning btn-xs edit" value="@list.CustomerId" style="font-size:10px;" data-toggle="modal" id="edit" data-target="#ButtonEdit"><i class="fa fa-pencil"></i> แก้ไข</button>
                            <button class="btn btn-danger btn-xs  delete" value="@list.CustomerId" style="font-size:10px;"><i class="fa fa-eraser"></i> ลบ</button>
                        </td>
                    </tr>
                    Rows++;
                }
            }
        </tbody>
    </table>
</div>