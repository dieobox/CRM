@model DEPIntranet.Models.Menus
<div id="content">
    <section id="widget-grid" class="">
        <div class="jarviswidget" id="wid-id-4" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-deletebutton="false" data-widget-sortable="false">
            <header>
                <h2><i class="fa fa-plus"></i> เพิ่มเมนูหลัก</h2>
            </header>
            <div>
                <!-- widget edit box -->
                <div class="jarviswidget-editbox">
                    <input class="form-control" type="text">
                </div>
                <div class="widget-body">

                    @* Form *@
                    <form id="FormAddMenu" class="form-horizontal"
                          asp-antiforgery="true"
                          data-bv-message="This value is not valid"
                          data-bv-feedbackicons-valid="glyphicon glyphicon-ok"
                          data-bv-feedbackicons-invalid="glyphicon glyphicon-remove"
                          data-bv-feedbackicons-validating="glyphicon glyphicon-refresh">
                        <fieldset>
                            <legend style="color:red;">กรุณากรอกข้อมูลให้ครบถ้วน</legend>
                            <div class="form-group">
                                <label class="col-lg-3 control-label">ชื่อเมนูหลัก <span style="color:red;">*</span></label>
                                <div class="col-lg-9">
                                    <input type="text" class="form-control" asp-for="MenuName" maxlength="100"
                                           data-bv-notempty="true"
                                           data-bv-notempty-message="กรุณากรอกชื่อเมนูหลัก"
                                           data-bv-stringlength="true"
                                           data-bv-stringlength-max="100"
                                           data-bv-stringlength-message="ชื่อเมนูไม่เกิน100ตัวอักษร" />
                                </div>
                            </div>
                        </fieldset>
                        <fieldset>
                            <div class="form-group">
                                <label class="col-lg-3 control-label">สถานะ <span style="color:red;">*</span></label>
                                <div class="col-lg-5">
                                    <div class="radio">
                                        <label>
                                            <input type="radio" class="radiobox style-0" asp-for="Enable" value="true" checked="checked">
                                            <span>เปิดใช้งาน</span>
                                        </label>
                                    </div>
                                    <div class="radio">
                                        <label>
                                            <input type="radio" class="radiobox style-0" asp-for="Enable" value="false">
                                            <span>ปิดใช้งาน</span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </fieldset>

                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-12">
                                    <button class="btn btn-success" type="submit" id="submit">บันทึก</button>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </section>
</div>